FROM python:3.11-slim AS builder

WORKDIR /app

# Install dependencies in a virtual environment for isolation
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy only requirements first (optimal layer caching)
COPY requirements.txt .

# Install dependencies with pip cache mount for faster rebuilds
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir -r requirements.txt



FROM python:3.11-slim AS production

# Create non-root user with proper home directory
RUN addgroup --gid 1001 --system app && \
    mkdir -p /home/app && \
    adduser --uid 1001 --system --ingroup app --home /home/app --no-create-home app && \
    chown -R app:app /home/app

WORKDIR /app

# Create Hugging Face cache directory with proper permissions
RUN mkdir -p /home/app/.cache/huggingface && \
    chown -R app:app /home/app/.cache

# Copy virtual environment from builder stage
COPY --from=builder --chown=app:app /opt/venv /opt/venv

# Copy application code (only necessary files)
COPY --chown=app:app ./app ./app
COPY --chown=app:app ./data ./data

# Set environment variables
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    HF_HOME=/home/app/.cache/huggingface \
    TRANSFORMERS_CACHE=/home/app/.cache/huggingface \
    HOME=/home/app

# Switch to non-root user
USER 1001

# Expose port
EXPOSE 8000

# Health check (30s interval, 10s timeout, 3 retries)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import httpx; httpx.get('http://localhost:8000/api/health', timeout=5)" || exit 1

# Run application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
